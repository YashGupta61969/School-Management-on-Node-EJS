<main class="flex flex-col w-full py-2 px-10 overflow-hidden">
  <h1 class="text-3xl overflow-hidden font-semibold my-5">Schools</h1>
  <table class="min-w-full border text-center">
    <thead class="border-b-2">
      <tr>
        <th
          scope="col"
          class="text-xl font-medium text-gray-900 px-6 py-4 border-r"
        >
          Name
        </th>
        <th
          scope="col"
          class="text-xl font-medium text-gray-900 px-6 py-4 border-r"
        >
          Address
        </th>
        <th
          scope="col"
          class="text-xl font-medium text-gray-900 px-6 py-4 border-r"
        >
          Email
        </th>
        <th
          scope="col"
          class="text-xl font-medium text-gray-900 px-6 py-4 border-r"
        >
          Phone
        </th>
        <th scope="col" class="text-xl font-medium text-gray-900 px-6 py-4">
          Actions
        </th>
      </tr>
    </thead>
    <tbody>
      <% data.forEach((item, index)=>{ %>
      <tr class="border-b">
        <td
          class="text-sm text-gray-900 font-normal px-6 py-4 whitespace-nowrap border-r"
        >
          <%= item.name %>
        </td>
        <td
          class="text-sm text-gray-900 font-normal px-6 py-4 whitespace-nowrap border-r"
        >
        <%= item.address %>
        </td>
        <td
          class="text-sm text-gray-900 font-normal px-6 py-4 whitespace-nowrap border-r"
        >
        <%= item.email %>
        </td>
        <td
          class="text-sm text-gray-900 font-normal px-6 py-4 whitespace-nowrap border-r"
        >
        <%= item.phone %>
        </td>
        <td
          class="flex text-sm text-gray-900 font-normal p-4 whitespace-nowrap border-r space-x-1"
        >
          <button class="bg-gray-800 text-white rounded-sm flex-1 py-1">
            Edit
          </button>
          <button class="bg-red-600 text-white rounded-sm flex-1 py-1">
            Delete
          </button>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</main>
