<form class="flex flex-col w-full mx-auto pl-4 mt-2">
  <h1 class="text-2xl font-semibold mb-5 mt-3">School Form</h1>

  <!-- Input For Name -->
  <div class="mb-6">
    <label
      for="name"
      class="block mb-2 text-lg font-medium text-gray-900 dark:text-white"
      >School Name</label
    >
    <input
      type="text"
      id="name"
      required
      class="bg-gray-50 border w-full border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
    />
  </div>

  <!-- Input For Address -->
  <div class="mb-6">
    <label
      for="address"
      class="block mb-2 text-lg font-medium text-gray-900 dark:text-white"
      >School Address</label
    >
    <input
      type="text"
      id="address"
      required
      class="bg-gray-50 border w-full border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
    />
  </div>

  <!-- Input For Email -->
  <div class="mb-6">
    <label
      for="email"
      class="block mb-2 text-lg font-medium text-gray-900 dark:text-white"
      >School Email</label
    >
    <input
      type="email"
      required
      id="email"
      class="bg-gray-50 border w-full border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
    />
  </div>

  <!-- Input For Phone -->
  <div class="mb-6">
    <label
      for="phone"
      class="block mb-2 text-lg font-medium text-gray-900 dark:text-white"
      >School Phone</label
    >
    <input
      type="number"
      required
      id="phone"
      class="bg-gray-50 border w-full border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5 dark:bg-gray-700 dark:placeholder-gray-400 dark:text-white"
    />
  </div>

  <!-- Submit Button -->
  <button
    class="bg-gray-800 hover:bg-gray-900 text-white font-bold py-2 px-4 border border-blue-700 rounded">
    Submit
  </button>
</form>

